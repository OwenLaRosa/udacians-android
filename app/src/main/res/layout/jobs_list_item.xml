<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/jobs_horizontal_margin"
    android:paddingStart="@dimen/jobs_horizontal_margin"
    android:paddingRight="@dimen/jobs_horizontal_margin"
    android:paddingEnd="@dimen/jobs_horizontal_margin"
    android:paddingTop="@dimen/jobs_vertical_margin"
    android:paddingBottom="@dimen/jobs_vertical_margin">

    <TextView
        android:id="@+id/job_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:text="Junior Android Developer"
        android:layout_marginBottom="@dimen/jobs_vertical_margin"/>

    <TextView
        android:id="@+id/job_company_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:text="Google"
        android:layout_marginBottom="@dimen/jobs_vertical_margin"/>

    <TextView
        android:id="@+id/job_location_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Cambridge, MA"/>

</LinearLayout>