<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_edge_margin"
        android:layout_marginBottom="@dimen/vertical_edge_margin"
        android:layout_marginEnd="@dimen/edge_margin"
        android:layout_marginLeft="@dimen/edge_margin"
        android:layout_marginRight="@dimen/edge_margin"
        android:layout_marginStart="@dimen/edge_margin"
        android:text="@string/about"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/event_about_text_view"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/vertical_inter_item_space"
        android:layout_marginEnd="@dimen/edge_margin"
        android:layout_marginLeft="@dimen/edge_margin"
        android:layout_marginRight="@dimen/edge_margin"
        android:layout_marginStart="@dimen/edge_margin" />

    <com.owenlarosa.udacians.views.WritePostView
        android:id="@+id/event_write_post_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/vertical_inter_item_space"
        android:layout_marginEnd="@dimen/edge_margin"
        android:layout_marginLeft="@dimen/edge_margin"
        android:layout_marginRight="@dimen/edge_margin"
        android:layout_marginStart="@dimen/edge_margin" />

</LinearLayout>