<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/blogs_horizontal_margin"
    android:paddingStart="@dimen/blogs_horizontal_margin"
    android:paddingRight="@dimen/blogs_horizontal_margin"
    android:paddingEnd="@dimen/blogs_horizontal_margin"
    android:paddingTop="@dimen/blogs_vertical_margin"
    android:paddingBottom="@dimen/blogs_vertical_margin">

    <TextView
        android:id="@+id/blog_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:text="Creating a Sticker Pack for iOS 10"
        android:layout_marginBottom="@dimen/blogs_vertical_margin"/>

    <TextView
        android:id="@+id/blog_author_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Owen LaRosa"
        android:layout_marginBottom="@dimen/blogs_vertical_margin"/>

    <TextView
        android:id="@+id/blog_url_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="http://blog.owenlarosa.com/2016/09/creating-sticker-pack-for-ios-10.html"/>

</LinearLayout>