<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <Button
        android:id="@+id/drawer_edit_profile_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="@string/edit_profile"
        android:padding="@dimen/drawer_vertical_margin"
        android:layout_marginTop="@dimen/drawer_vertical_margin"
        android:layout_marginBottom="@dimen/drawer_vertical_margin"/>

    <ImageView
        android:id="@+id/drawer_profile_image_view"
        android:layout_width="@dimen/drawer_profile_icon_size"
        android:layout_height="@dimen/drawer_profile_icon_size"
        android:background="@color/colorAccent"
        android:layout_marginLeft="@dimen/drawer_horizontal_margin"
        android:layout_marginStart="@dimen/drawer_horizontal_margin"
        android:layout_marginBottom="@dimen/drawer_vertical_margin"/>

    <TextView
        android:id="@+id/drawer_profile_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/white"
        android:text="Owen LaRosa"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/drawer_horizontal_margin"
        android:layout_marginStart="@dimen/drawer_horizontal_margin"
        android:layout_marginBottom="@dimen/drawer_vertical_margin"/>

    <TextView
        android:id="@+id/drawer_profile_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/white"
        android:text="Code Reviewer at Udacity"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/drawer_horizontal_margin"
        android:layout_marginStart="@dimen/drawer_horizontal_margin"
        android:layout_marginBottom="@dimen/drawer_vertical_margin"/>

</LinearLayout>