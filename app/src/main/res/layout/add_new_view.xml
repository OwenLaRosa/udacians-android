<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/input_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Discussion topic"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/input_subtitle_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What would you like to discuss with other students?"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_below="@id/input_title_text_view"/>

    <EditText
        android:id="@+id/input_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Discussion prompt"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_below="@id/input_subtitle_text_view"/>

    <Button
        android:id="@+id/input_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prev"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorAccent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_below="@id/input_edit_text"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/input_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorAccent"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_below="@id/input_edit_text"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>