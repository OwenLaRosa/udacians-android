<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/profile_header_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#22000000">

            <ImageView
                android:id="@+id/profile_image_view"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/profile_left_margin"
                android:layout_marginStart="@dimen/profile_left_margin"
                android:layout_marginRight="@dimen/profile_margin_small"
                android:layout_marginEnd="@dimen/profile_margin_small"
                android:layout_marginBottom="@dimen/profile_margin_small"
                android:background="@color/white"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/profile_title_text_view"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/profile_margin_small"
                android:layout_toEndOf="@id/profile_image_view"
                android:layout_toRightOf="@id/profile_image_view"
                android:maxLines="1"
                android:text="Code Reviewer at Udacity"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/profile_name_text_view"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/profile_title_text_view"
                android:layout_marginBottom="@dimen/profile_margin_small"
                android:layout_toEndOf="@id/profile_image_view"
                android:layout_toRightOf="@id/profile_image_view"
                android:maxLines="1"
                android:text="Owen LaRosa"
                android:textColor="@color/white" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/profile_left_margin"
                android:layout_marginStart="@dimen/profile_left_margin"
                android:layout_marginRight="@dimen/profile_fab_right_margin"
                android:layout_marginEnd="@dimen/profile_fab_right_margin">

                <TextView
                    android:id="@+id/profile_about_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textStyle="bold"
                    android:text="@string/about"
                    android:layout_marginTop="@dimen/profile_margin_small"
                    android:layout_marginBottom="@dimen/profile_margin_small"/>

                <TextView
                    android:id="@+id/profile_about_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_marginBottom="@dimen/profile_margin_small"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum." />

                <LinearLayout
                    android:id="@+id/profile_links_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/profile_margin_small">

                    <!-- Contains icons that link to personal sites -->

                </LinearLayout>

                <com.owenlarosa.udacians.views.WritePostView
                    android:id="@+id/profile_write_post_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/profile_margin_small"/>

                <LinearLayout
                    android:id="@+id/profile_posts_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/profile_margin_small">

                    <!-- Displays recent posts on the user's profile -->

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/profile_fab_right_margin"
        android:layout_marginEnd="@dimen/profile_fab_right_margin"
        android:clickable="true"
        android:background="@color/colorAccent"
        android:contentDescription="@string/a11y_add_connection"
        app:layout_anchor="@id/profile_header_view"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>