<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/edge_margin"
    android:paddingEnd="@dimen/edge_margin">

    <TextView
        android:id="@+id/profile_about_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:textStyle="bold"
        android:text="@string/about"
        android:layout_marginTop="@dimen/vertical_edge_margin"
        android:layout_marginBottom="@dimen/vertical_edge_margin"/>

    <TextView
        android:id="@+id/profile_about_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_default"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginBottom="@dimen/profile_links_vertical_offset"/>

    <LinearLayout
        android:id="@+id/profile_links_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_links_height"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/profile_links_vertical_offset">

        <!-- Contains icons that link to personal sites -->

    </LinearLayout>

    <com.owenlarosa.udacians.views.WritePostView
        android:id="@+id/profile_write_post_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/vertical_edge_margin"/>

</LinearLayout>